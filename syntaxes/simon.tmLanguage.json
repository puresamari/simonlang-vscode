{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "SimonLang",
  "patterns": [
    { "include": "#invalid" },
    { "include": "#keywords" },
    { "include": "#strings" }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.indicator",
          "match": "^simon "
        }
      ]
    },
    "invalid": {
      "patterns": [
        {
          "name": "invalid.non-simon-line",
          "match": "^(?!(simon)).+\n"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.simon",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.simon",
          "match": "\\\\."
        }
      ]
    }
  },
  "scopeName": "source.simon"
}